---
import { uiData } from "../constants/languages.js";
---

<header class="text-white text-[8px] sm:text-xl md:text-md flex justify-start items-center py-5 w-full xl:w-[1120px] mx-auto transition-all duration-300 ease-in-out">
  <nav class="top-52 md:top-40 right-4 md:right-auto md:left-0 fixed mt-4 px-1 md:px-4 py-2 ml-5 flex flex-col bg-[#052423] rounded-full p-5 items-start flex-wrap gap-y-3 md:gap-y-5 sm:gap-x-5 md:gap-x-7 z-40 border border-green-400/20">
    
    <a href="#main" class="group relative flex items-center space-x-2">
      <svg class="size-6 text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m4 12 8-8 8 8M6 10.5V19a1 1 0 0 0 1 1h3v-3a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1v3h3a1 1 0 0 0 1-1v-8.5"></path>
      </svg>
      <p id="nav-home" class="hidden group-hover:block absolute left-10 text-green-200 bg-[#052423] p-2 rounded-md border border-green-400/30 text-nowrap"></p>
    </a>

    <a href="#skills" class="group relative flex items-center space-x-2">
      <svg xmlns="http://www.w3.org/2000/svg" class="size-6 text-white" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <path d="M7 8l-4 4l4 4"></path>
        <path d="M17 8l4 4l-4 4"></path>
        <path d="M14 4l-4 16"></path>
      </svg>
      <p id="nav-skills" class="hidden group-hover:block absolute left-10 text-green-200 bg-[#052423] p-2 rounded-md border border-green-400/30 text-nowrap"></p>
    </a>

    <a href="#experience" class="group relative flex items-center space-x-2">
      <svg xmlns="http://www.w3.org/2000/svg" class="size-6 text-white" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" width="24" height="24" stroke-width="2">
        <path d="M3 9a2 2 0 0 1 2 -2h14a2 2 0 0 1 2 2v9a2 2 0 0 1 -2 2h-14a2 2 0 0 1 -2 -2v-9z"></path>
        <path d="M8 7v-2a2 2 0 0 1 2 -2h4a2 2 0 0 1 2 2v2"></path>
      </svg>
      <p id="nav-exp" class="hidden group-hover:block absolute left-10 text-green-200 bg-[#052423] p-2 rounded-md border border-green-400/30 text-nowrap"></p>
    </a> 

    <a href="#projects" class="group relative flex items-center space-x-2">
      <svg class="size-6 text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v5m-3 0h6M4 11h16M5 15h14a1 1 0 0 0 1-1V5a1 1 0 0 0-1-1H5a1 1 0 0 0-1 1v9a1 1 0 0 0 1 1Z"></path>
      </svg>
      <p id="nav-projects" class="hidden group-hover:block absolute left-10 text-green-200 bg-[#052423] p-2 rounded-md border border-green-400/30 text-nowrap"></p>
    </a>
  </nav>
</header>

<script define:vars={{ uiData }}>
  function updateNav(lang) {
    const nav = uiData[lang].nav;
    // Mapeo de IDs
    document.getElementById('nav-home').textContent = nav.home;
    document.getElementById('nav-skills').textContent = nav.skills;
    document.getElementById('nav-exp').textContent = nav.exp;
    document.getElementById('nav-projects').textContent = nav.projects;
  }

  window.addEventListener('langChanged', (e) => updateNav(e.detail));
  updateNav(localStorage.getItem('pref-lang') || 'en');
</script>