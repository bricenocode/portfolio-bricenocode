---
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
interface Props { title: string; }
const { title } = Astro.props;
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <link href="https://fonts.googleapis.com/css2?family=Parkinsans:wght@300;400;700;800&display=swap" rel="stylesheet">
  </head>
  <body class="bg-[#000000] text-white">
    <div class="fixed top-4 right-4 z-[100] flex gap-1 bg-black/60 backdrop-blur-md p-1 rounded-full border border-white/10 shadow-xl">
      <button id="btn-en" class="px-3 py-1 text-[10px] font-bold rounded-full transition-all duration-300">EN</button>
      <button id="btn-es" class="px-3 py-1 text-[10px] font-bold rounded-full transition-all duration-300">ES</button>
    </div>

    <Header />
    <slot />
    <Footer />

    <script is:inline>
      const btnEn = document.getElementById('btn-en');
      const btnEs = document.getElementById('btn-es');

      function setLanguage(lang) {
        localStorage.setItem('pref-lang', lang);
        document.documentElement.lang = lang;
        
        window.dispatchEvent(new CustomEvent('langChanged', { detail: lang }));

        if (lang === 'en') {
          btnEn.classList.add('bg-green-500', 'text-black');
          btnEn.classList.remove('text-white/50', 'hover:text-white');
          
          btnEs.classList.remove('bg-green-500', 'text-black');
          btnEs.classList.add('text-white/50', 'hover:text-white');
        } else {
          btnEs.classList.add('bg-green-500', 'text-black');
          btnEs.classList.remove('text-white/50', 'hover:text-white');
          
          btnEn.classList.remove('bg-green-500', 'text-black');
          btnEn.classList.add('text-white/50', 'hover:text-white');
        }
      }

      btnEn.onclick = () => setLanguage('en');
      btnEs.onclick = () => setLanguage('es');

      const storedLang = localStorage.getItem('pref-lang');
      if (!storedLang) {
        setLanguage('en');
      } else {
        setLanguage(storedLang);
      }
    </script>

  </body>
</html>

    <style is:global>
      html { font-family: "Parkinsans", sans-serif; scroll-behavior: smooth; }
      body { 
        background: radial-gradient(circle at top center, #052423 0%, #000000 100%);
        min-height: 100vh;
        overflow-x: hidden;
      }
      .transition-all { transition: all 0.3s ease; }
      </style>